<h3><%= t '.header' %></h3>
<%= link_to t('.add'), new_event_path %>
<table class="table table-striped">
  <thead>
    <tr>
    <th></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td>
        <%= link_to t('show'), event_path(event) %>
        <%= link_to t('edit'), edit_event_path(event) %>
        <%= link_to t('destroy'), event_path(event),
              method: :delete,
              data: { confirm: t('confirm') } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
