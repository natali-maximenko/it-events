<div class="album">
<% @events.each do |event| %>
<div class="card">
  <%= image_tag event.cover.url %>
  <h2><%= event.title %></h2>
  <p class="card-text"><%= l(event.started_at, format: :long) %></p>
  <p class="card-text"><%= event.address %></p>
  <%= link_to t('show'), event_path(event), class: 'btn btn-secondary' %>
</div>
<% end %>
</div>

<div class='apple_pagination'>
<%= will_paginate @events %>
</div>

