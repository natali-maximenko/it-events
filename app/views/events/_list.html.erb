<%= form_tag request.path, method: 'get', class: 'form-inline' do %>
  <div class="form-group">
  <%= content_tag :label do %>
    <%= t('start_date') %>:
    <%= text_field_tag :start_date, params[:start_date], class: 'form-control'  %>
  <% end %>
  </div>
  <div class="form-group">
  <%= content_tag :label do %>
    <%= t('end_date') %>:
    <%= text_field_tag :end_date, params[:end_date], class: 'form-control'  %>
  <% end %>
  </div>
  <%= submit_tag t('search'), class: 'btn btn-success' %>
<% end %>
<div class="album">
<% @events.each do |event| %>
<div class="card">
  <%= image_tag event.cover.url %>
  <h2><%= event.title %></h2>
  <p class="card-text"><%= l(event.started_at, format: :long) %></p>
  <%= link_to t('show'), event_path(event), class: 'btn btn-secondary' %>
</div>
<% end %>
</div>
<div class='apple_pagination'>
<%= will_paginate @events %>
</div>
