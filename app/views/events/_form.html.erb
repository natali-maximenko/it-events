<%= simple_form_for @event, html: { class: 'form-horizontal' } do |f| %>
 <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t('activerecord.errors.messages.record_invalid', errors: @event.errors.count) %>
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :title, label: t('.title'), input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: t('.description'), input_html: { class: 'form-control' } %>
  </div>

  <% if @event.new_record? %>
  <div class="form-group">
  <%= f.label :started_at, t('.started_at') %>
  <%= datetime_select :event, :started_at %>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.input :cover, label: t('.cover'), as: :file %>
  </div>

  <div class="form-group">
    <%= f.input :remote_cover_url, label: t('.picture_url'), input_html: { class: 'form-control' } %>
  </div>

  <% if @event.cover.url %>
  <div class="form-group">
    <%= image_tag @event.cover.url(:thumb) %>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.input :link, label: t('.link'), input_html: { class: 'form-control' } %>
  </div>

  <div class="actions form-group">
    <%= f.button :submit, @event.new_record? ? t('.create') : t('.save'), class: 'btn btn-success' %>
  </div>
<% end %>
