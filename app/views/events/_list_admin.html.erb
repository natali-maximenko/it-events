<%= form_tag request.path, method: 'get' do %>
  <%= content_tag :label do %>
    C:
    <%= text_field_tag :start_date, params[:start_date] %>
  <% end %>
  <%= content_tag :label do %>
    по:
    <%= text_field_tag :end_date, params[:end_date] %>
  <% end %>
  <%= submit_tag 'Search' %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
    <th></th>
    <th></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= l(event.started_at, format: :short) %></td>
      <td><%= event.title %></td>
      <td>
        <%= link_to t('show'), event_path(event) %>
        <%= link_to t('edit'), edit_event_path(event) %>
        <%= link_to t('destroy'), event_path(event),
              method: :delete,
              data: { confirm: t('confirm') } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class='apple_pagination'>
<%= will_paginate @events %>
</div>
